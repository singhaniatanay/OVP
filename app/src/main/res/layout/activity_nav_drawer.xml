<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_nav_drawer"
        android:id="@+id/nav_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        layout="@layout/about_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:id="@+id/nav_layout_about"
        android:visibility="gone"
        android:layout_height="match_parent" />
    <include
        layout="@layout/manifesto_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:id="@+id/nav_layout_manifesto"
        android:visibility="gone"
        android:layout_height="match_parent" />
    <include
        layout="@layout/guideline_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:id="@+id/nav_layout_guideline"
        android:visibility="gone"
        android:layout_height="match_parent" />
    <include
        layout="@layout/leaders_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/nav_layout_leaders"
        android:layout_height="match_parent" />
    <include
        layout="@layout/polling_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/nav_layout_polling"
        android:layout_height="match_parent" />
    <include
        layout="@layout/polling2_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/nav_layout_polling2"
        android:layout_height="match_parent" />
    <include
        layout="@layout/polling3_app_bar_nav_drawer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/nav_layout_polling3"
        android:layout_height="match_parent" />



    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_nav_drawer"
        app:menu="@menu/activity_nav_drawer_drawer" />

</android.support.v4.widget.DrawerLayout>
